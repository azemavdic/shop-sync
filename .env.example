# =============================================================================
# ShopSyncX - Environment Variables
# Copy this file to .env and adjust as needed.
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL (Docker Compose)
# Run: docker compose up -d
# -----------------------------------------------------------------------------
POSTGRES_USER=shopsyncx
POSTGRES_PASSWORD=shopsyncx_secret
POSTGRES_DB=shopsyncx

# Database URL - used by backend (connects to localhost when backend runs on host)
DATABASE_URL="postgresql://shopsyncx:shopsyncx_secret@localhost:5432/shopsyncx?schema=public"

# -----------------------------------------------------------------------------
# Backend
# -----------------------------------------------------------------------------
JWT_SECRET="change-this-to-a-random-secret-in-production"
PORT=3000
NODE_ENV=development

# OAuth (optional - login buttons hidden if not set)
# Google: https://console.cloud.google.com/apis/credentials - create OAuth 2.0 Web client
# Facebook: https://developers.facebook.com/apps - add Facebook Login product
# Add redirect URI to both: run app and log redirectUri, or use shopsyncx://redirect
GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET not needed (frontend exchanges code, sends id_token)
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# -----------------------------------------------------------------------------
# Frontend (Expo)
# For Android emulator use 10.0.2.2 instead of localhost
# For physical device use your PC's local IP (e.g. 192.168.1.100)
# -----------------------------------------------------------------------------
EXPO_PUBLIC_API_URL="http://localhost:3000/api/v1"
EXPO_PUBLIC_SOCKET_URL="http://localhost:3000"
# OAuth client IDs (public, same as backend - buttons hidden if not set)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=""
EXPO_PUBLIC_FACEBOOK_APP_ID=""
